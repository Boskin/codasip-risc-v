            r_pc = s_ex_branch_target;
        } else {
            r_pc += RISCV_INSTR_SIZE;
        }

        s_id_clear = s_ex_take_branch;
        r_id_clear = s_ex_take_branch;
        s_ex_clear = s_ex_take_branch;
        s_me_clear = s_ex_stall;
        s_wb_clear = s_me_stall;
    };
};
