        s_fe_clear = 0;
        s_fe_stall = 0;

        if_code.request(CP_CMD_READ, r_pc);
        //if_code.finish(CP_CMD_READ, s_fe_instr);

        r_id_pc = r_pc;
        // r_id_instr = s_fe_instr;
